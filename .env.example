# Database - Prisma standard variable
DATABASE_URL="postgresql://user:password@host:5432/database"
# Alternative names (depending on provider):
# POSTGRES_PRISMA_URL="postgresql://..."
# PRISMA_DATABASE_URL="postgresql://..."

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl-rand-base64-32"

# Analytics & Tracking - REQUIRED for ADV campaigns
# Meta Pixel (Facebook/Instagram Pixel) - Get from: https://business.facebook.com/events_manager
NEXT_PUBLIC_META_PIXEL_ID="your_pixel_id_here"
NEXT_PUBLIC_FB_PIXEL_ID="your_pixel_id_here"  # Legacy name (deprecated, use META_PIXEL_ID)

# Google Analytics 4 - Get from: https://analytics.google.com (format: G-XXXXXXXXXX)
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Facebook App ID (optional - for Open Graph social sharing)
NEXT_PUBLIC_FB_APP_ID=""

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Resend (Email)
RESEND_API_KEY="re_..."
RESEND_FROM="Torri dell'Acqua <no-reply@tua-dominio-verificato.com>"
RESEND_DOMAIN="tua-dominio-verificato.com"

# Google Maps
GOOGLE_MAPS_API_KEY="..."

# Visualizza prenotazioni (pagina /prenotazioni) e modifica menu (pagina /menu/admin)
BOOKING_VIEW_PIN="1234"
# Opzionale: PIN solo per menu admin (se non impostato si usa BOOKING_VIEW_PIN)
# MENU_ADMIN_PIN="1234"

# Admin
ADMIN_EMAIL="admin@torridellacqua.it"

# Restaurant Info (Server-side)
RESTAURANT_NAME="Torri dell'Acqua"
RESTAURANT_EMAIL="info@torridellacqua.it"
RESTAURANT_PHONE="+39 ..."
RESTAURANT_ADDRESS="Via Dante Alighieri n. 8, 73040 Castrignano del Capo (LE)"

# Restaurant Info (Client-side - NEXT_PUBLIC_ prefix required)
NEXT_PUBLIC_RESTAURANT_NAME="Torri dell'Acqua"
NEXT_PUBLIC_RESTAURANT_COMPANY_NAME="TORRI DELL'ACQUA S.R.L."
NEXT_PUBLIC_RESTAURANT_ADDRESS="Via Dante Alighieri n. 8, 73040 Castrignano del Capo (LE)"
NEXT_PUBLIC_RESTAURANT_PHONE="+39 0833 123456"
NEXT_PUBLIC_RESTAURANT_EMAIL="info@torridellacqua.it"
NEXT_PUBLIC_RESTAURANT_PIVA="05375440756"
NEXT_PUBLIC_RESTAURANT_INSTAGRAM="https://www.instagram.com/torridellacqua_restaurant/"
NEXT_PUBLIC_RESTAURANT_INSTAGRAM_HANDLE="@torridellacqua_restaurant"

# Menu subdomain: se la richiesta arriva da questo host, / viene riscritto a /menu (nessun redirect)
MENU_DOMAIN="menu.torridellacqua.it"
# URL prenotazioni: link "Prenota un tavolo" sulla landing menu (su menu.torridellacqua.it usare prenota.torridellacqua.it)
NEXT_PUBLIC_BOOKING_URL="https://prenota.torridellacqua.it"
